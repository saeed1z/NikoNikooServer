    || currentBaseKindId == Convert.ToInt32(BaseKindEnum.TypesOfCarWashServicesWithWater)
    || currentBaseKindId == Convert.ToInt32(BaseKindEnum.TypesOfRepairServices)
    || currentBaseKindId == Convert.ToInt32(BaseKindEnum.TypesOfCarServiceCenters)
    || currentBaseKindId == Convert.ToInt32(BaseKindEnum.TypesOfAccessoryCenters))
    ? "sidebar-group-active open" : "": ""
    )">
        <a href="javascript:">
            <i class="bx bx-file"></i>
            <span class="menu-title" data-i18n="Invoice">سایر اطلاعات پایه</span>
        </a>
        <ul class="menu-content" style="">
            <li class="@(currentBaseKindId== Convert.ToInt32(BaseKindEnum.TechnicalSpecificationItems)?"active":"")">
                <a asp-controller="Base" asp-action="Index" asp-route-basekindid="@Convert.ToInt32(BaseKindEnum.TechnicalSpecificationItems)">
                    <i class="bx bx-file"></i>
                    <span class="menu-item">آیتم های مشخصات فنی</span>
                </a>

            </li>
            <li class="has-sub @(currentBaseKindId== Convert.ToInt32(BaseKindEnum.TypesOfCarWashServicesWithOutWater) ||currentBaseKindId== Convert.ToInt32(BaseKindEnum.TypesOfCarWashServicesWithWater) ?"open":"")">
