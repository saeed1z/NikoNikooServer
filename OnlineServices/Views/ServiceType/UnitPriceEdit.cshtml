@model OnlineServices.Models.ServiceTypeUnitPriceModel

@{
    ViewData["Title"] ="ثبت قیمت جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-12 my-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left">@ViewData["Title"]</h5>
                <div class="breadcrumb-wrapper ">
                    <ol class="breadcrumb p-0 pl-1 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="UnitPrice">قیمت گذاری واحد خدمات</a>
                        </li>
                        <li class="breadcrumb-item active">
                            @ViewData["Title"]
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-body">
    <form asp-action="SaveUnitPrice" asp-antiforgery="true">
        @if (!Html.ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger mb-2" role="alert">
            </div>
        }
        <section>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <fieldset class="form-group">
                                            <label>نوع خدمت</label>
                                            <select asp-for="ServiceTypeId" name="ServiceTypeId" class="select2 form-control select2-hidden-accessible select-is-required" asp-items="@Model.ServiceTypeList">
                                            </select>
                                            <span asp-validation-for="ServiceTypeId" class="invalid-feedback"></span>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-6">
                                        <fieldset class="form-group">
                                            <label>قیمت</label>
                                            <input type="text" class="form-control" asp-for="Price" placeholder="قیمت را وارد کنید" autocomplete="off">
                                            <span asp-validation-for="Price" class="invalid-feedback"></span>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-success glow mr-1 mb-1">
                    <i class="bx bx-check"></i>
                    <span class="align-middle ml-25">ثبت اطلاعات</span>
                </button>

            </div>
        </div>
        @Html.HiddenFor(p => p.Id)
    </form>
</div>
