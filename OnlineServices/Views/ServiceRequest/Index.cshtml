@{
    ViewData["Title"] = "لیست درخواست‌ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal fade text-left w-100" id="divRefrenceUserModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel20" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-full" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel20">ارجاع</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="بستن">
                    <i class="bx bx-x"></i>
                </button>
            </div>
            <div class="modal-body p-0">
                <div id="divRefrenceUserList"></div>
            </div>
        </div>
    </div>
</div>
<div class="content-header row">
    <div class="content-header-left col-12 my-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left">@ViewData["Title"]</h5>
                <div class="breadcrumb-wrapper ">
                    <ol class="breadcrumb p-0 pl-1 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active">
                            @ViewData["Title"]
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-body">
    <section id="servicetype-list-content">
        <div class="row">
            <div class="col-md-12">
                <div class="card" id="divServiceRequestList">
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    $(function () {
        MainForm.initRequestServiceList();
    })
</script>
