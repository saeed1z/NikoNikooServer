@model OnlineServices.Models.CommercialUserRequestListModel
@using OnlineServices.Utilities.Extensions

@{
    ViewData["Title"] = "مدیریت درخواست کاربر تجاری";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-12 my-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left">@ViewData["Title"]</h5>
                <div class="breadcrumb-wrapper ">
                    <ol class="breadcrumb p-0 pl-1 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active">
                            @ViewData["Title"]
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-body">
    <section id="brand-list-content">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content table-responsive">
                        <table class="table mb-0 line-height-1">
                            <thead>
                                <tr>
                                    <th>
                                        ردیف
                                    </th>
                                    <th>
                                        نام
                                    </th>
                                    <th>
                                        موبایل
                                    </th>
                                    <th>
                                        نام شرکت
                                    </th>
                                    <th>
                                        شماره‌ثبت
                                    </th>
                                    <th>
                                        سمت
                                    </th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.CommercialUserRequestModel.Count > 0)
                                {
                                    foreach (var item in Model.CommercialUserRequestModel)
                                    {
                                <tr>

                                    <td>
                                        @item.RowNum
                                    </td>
                                    <td>
                                        @item.PersonName
                                    </td>
                                    <td>
                                        @item.Mobile
                                    </td>
                                    <td>
                                        @item.CompanyName
                                    </td>
                                    <td>
                                        @item.RegistrationNumber
                                    </td>
                                    <td>
                                        @item.Post
                                    </td>
                                    <td class="@(item.IsAccepted &&  !item.IsRejected ? "text-success" :!item.IsAccepted &&  item.IsRejected ? "text-danger" : "text-warning")">
                                        @(item.IsAccepted &&  !item.IsRejected ? "تایید شده" :!item.IsAccepted &&  item.IsRejected ? "رد شده" : "بررسی نشده")
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" >
                                            مشاهده
                                        </a>
                                    </td>
                                </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">
                                            اطلاعاتی جهت نمایش موجود نمی باشد
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @{
                        var pager = Html.Pager(Model.PagerModel);
                    }
                  
                    <div class="pager">
                        @pager
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
