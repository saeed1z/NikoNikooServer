@model OnlineServices.Models.UserModel

@{
    ViewData["Title"] = "مشاهده پروفایل کاربر";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-12 my-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left">@ViewData["Title"]</h5>
                <div class="breadcrumb-wrapper ">
                    <ol class="breadcrumb p-0 pl-1 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="Users">لیست کاربران</a>
                        </li>
                        <li class="breadcrumb-item active">
                            @ViewData["Title"]
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-body">
    <section>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>نام</label>
                                        <input type="text" class="form-control" asp-for="FirstName" autocomplete="off" disabled>
                                        <span asp-validation-for="FirstName" class="invalid-feedback"></span>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>نام خانوادگی</label>
                                        <input type="text" class="form-control" asp-for="LastName" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>نوع کاربر</label>
                                        <input type="text" class="form-control" asp-for="PersonTypeTitle" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>شماره موبایل</label>
                                        <input type="text" class="form-control" asp-for="MobileNo" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>استان</label>
                                        <input type="text" class="form-control" asp-for="StateTitle" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>شهر</label>
                                        <input type="text" class="form-control" asp-for="CityTitle" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <fieldset class="form-group">
                                        <label>آدرس</label>
                                        <input type="text" class="form-control" asp-for="Address" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">اطلاعات هویتی</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>نام پدر</label>
                                        <input type="text" class="form-control" asp-for="FatherName" autocomplete="off" disabled>
                                        <span asp-validation-for="FatherName" class="invalid-feedback"></span>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>کد ملی</label>
                                        <input type="text" class="form-control" asp-for="NationalCode" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>جنسیت</label>
                                        <input type="text" class="form-control" asp-for="Gender" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>میزان تحصیلات</label>
                                        <input type="text" class="form-control" asp-for="EducationLevel" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>تاریخ تولد</label>
                                        <input type="text" class="form-control" asp-for="BirthDate" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-4">
                                    <fieldset class="form-group">
                                        <label>طبقه</label>
                                        <input type="text" class="form-control" asp-for="BuildingFloor" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <fieldset class="form-group">
                                        <label>واحد</label>
                                        <input type="text" class="form-control" asp-for="BuildingUnit" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <fieldset class="form-group">
                                        <label>پلاک</label>
                                        <input type="text" class="form-control" asp-for="BuildingPlate" autocomplete="off" disabled>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">اطلاعات خودروها</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-content table-responsive">
                                            <table class="table mb-0 line-height-1">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            مدل خودرو
                                                        </th>
                                                        <th>
                                                            شماره شهربانی
                                                        </th>
                                                        <th>
                                                            شماره شاسی
                                                        </th>
                                                        <th>
                                                            جزئیات
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.PersonCarList)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @item.ModelTitle
                                                            </td>
                                                            <td>
                                                                @item.PlaqueNo
                                                            </td>
                                                            <td>
                                                                @item.ChassisNo
                                                            </td>

                                                            <td>
                                                                @item.Description
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">بسته‌های خریداری شده</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-content table-responsive">
                                            <table class="table mb-0 line-height-1">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            نوع بسته
                                                        </th>
                                                        <th>
                                                            تاریخ
                                                        </th>
                                                        <th>
                                                            وضعیت
                                                        </th>
                                                        <th>
                                                            مبلغ
                                                        </th>
                                                        <th>
                                                            جزئیات
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.PersonPackageList)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @item.PackageTemplateTitle
                                                            </td>
                                                            <td>
                                                                @item.CreatedDate
                                                            </td>
                                                            <td>
                                                                <div class="checkbox checkbox-sm">
                                                                    <input type="checkbox" class="checkbox-input" id="chkPackageTemplateIsActive" disabled @(item.PackageTemplateIsActive ? "checked" : "")>
                                                                    <label for="chkPackageTemplateIsActive"></label>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                @item.PackageTemplateDescription
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">لیست خدمات قبلی</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-content table-responsive">
                                            <table class="table mb-0 line-height-1">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            نوع درخواست
                                                        </th>
                                                        <th>
                                                            تاریخ
                                                        </th>
                                                        @*<th>
                                                            وضعیت
                                                        </th>*@
                                                        @*<th>
                                                            هزینه
                                                        </th>*@
                                                        <th>
                                                            جزئیات
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.ServiceRequestList)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @item.ServiceTypeTitle
                                                            </td>
                                                            <td>
                                                                @item.RequestDateTime
                                                            </td>
                                                            @*<td>
                                                                <div class="checkbox checkbox-sm">
                                                                    <input type="checkbox" class="checkbox-input" id="chkPackageTemplateIsActive" disabled @(item. ? "checked" : "")>
                                                                    <label for="chkPackageTemplateIsActive"></label>
                                                                </div>
                                                            </td>*@
                                                            <td>
                                                                @item.Description
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="row">
        <div class="col-12">
            <a asp-action="Users" class="btn btn-danger glow mr-1 mb-1 cancel">
                <i class="bx bx-right-arrow"></i>
                <span class="align-middle ml-25">بازگشت</span>
            </a>
        </div>
    </div>
</div>
